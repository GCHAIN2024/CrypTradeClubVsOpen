<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Maui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Maui">
    
    
    <TabBar>
        <ShellContent Title="Home" ContentTemplate="{DataTemplate views:HomePage}" />
        <ShellContent Title="Album" ContentTemplate="{DataTemplate views:AlbumPage}" />
    </TabBar>
    
    <ShellContent Title="AlbumPage"  ContentTemplate="{DataTemplate views:AlbumPage}" />
</Shell>
